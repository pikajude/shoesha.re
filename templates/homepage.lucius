.jumbotron {
  h1 {
    color: white;
    border-radius: 4px;
    padding: 8px 15px;
    text-shadow: 0 2px 0 rgba(0,0,0,0.2);

    span {
      font-size: 50%;
      display: block;
      line-height: 1.5em;

      a {
        color: yellow;
      }
    }
  }
}

@media screen and (max-width: 767px) {
  .jumbotron {
    h1 {
      text-align: center;
    }
  }
}
