body {
  background: #eee;
}

a {
  text-align: center;
  display: block;
  padding: 250px 0;
  color: #888;
  font-size: 185.71%;
  font-weight: 200;
  -webkit-user-select: none;

  strong {
    font-size: 215.38%;
    color: black;
    display: block;
    margin-top: 12px;
  }

  &:hover {
    text-decoration: none;
    background: white;
  }
}

#decision {
  background: #eee;
}

.silver {
  background: #ddd;
  padding: 80px 0;
  border: 1px solid #ccc;
  border-width: 1px 0;
}
